<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:orientation="horizontal">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shimmer_base_color="@color/light_gray_shimmer_start"
        app:shimmer_clip_to_children="true"
        app:shimmer_colored="true"
        app:shimmer_duration="@integer/shimmer_animation_duration"
        app:shimmer_highlight_color="@color/light_gray_shimmer_end">

        <View
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/circle_avatar" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="144dp"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shimmer_base_color="@color/light_gray_shimmer_start"
            app:shimmer_clip_to_children="true"
            app:shimmer_colored="true"
            app:shimmer_duration="@integer/shimmer_animation_duration"
            app:shimmer_highlight_color="@color/light_gray_shimmer_end">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_light_gray_rectangle" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shimmer_base_color="@color/light_gray_shimmer_start"
            app:shimmer_clip_to_children="true"
            app:shimmer_colored="true"
            app:shimmer_duration="@integer/shimmer_animation_duration"
            app:shimmer_highlight_color="@color/light_gray_shimmer_end">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_light_gray_rectangle" />
        </com.facebook.shimmer.ShimmerFrameLayout>
    </LinearLayout>
</LinearLayout>